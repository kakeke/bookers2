<div>
	<h2>User Info</h2>
	 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg' %> 
    <h3><%= @user.username %></h3>
    <h3><%= @user.introduction %></h3>
    <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>