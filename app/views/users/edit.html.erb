<h2>Profile</h2>
<%= form_for(@user) do |f| %>
    <div>
        <label>Name</label>
        <%= f.text_field :username, class: "name" %>
        <span></span>
    </div>  
    <div>
        <label>Image</label>
    <%= f.attachment_field :profile_image, class: "user_image" %>
        <label>Introduction</label>
        <%= f.text_field :introduction, class: "introduction" %>
    </div>                                                                      
    <%= f.submit "Update User" %>
<% end %>