  <div class="container">
      <div class="row"> 
        <div class="col-lg-3">
	<h2>User Info</h2>
	 <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %>
    <table class="table">
    <tr>
        <th>name</th>
        <td><h3><%= current_user.username %></h3></td>
    </tr>
    <tr>
        <th>introduction</th>
        <td><h3><%= current_user.introduction %></h3></td>
    </tr>
    </table>
    <p class="btn btn-default button"><%= link_to "", edit_user_path(current_user),class: "glyphicon glyphicon-wrench edit_user_#{current_user.id}" %></p>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title, class: "button book_title" %>
<h4>Opinion</h4>
<%= f.text_area :opinion, class: "button book_body" %>
<p><%= f.submit 'Create Book', class: "btn btn-primary button" %></p>
<% end %>
</div>
<div class="col-lg-9">
<h2>Users</h2>
<table class= "table">
	<tr>
		<th>image</th>
		<th>name</th>
		<th></th>
	</tr>
<% @users.each do |user| %>
    <tr>
    	<td><%= attachment_image_tag user, :profile_image, :fill, 90, 100, format: 'jpeg',fallback: "no_image.jpg" %></td>
        <td><%= user.username %></td>
    	<td><%= link_to user_path(user.id), class: "user_#{user.id}" do %>
       Show<% end %> 
      </td>
    </tr>
<% end %>
</table>
</div>
</div>
</div>