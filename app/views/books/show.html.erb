<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="container">
      <div class="row"> 
        <div class="col-lg-3">
	<h2>User Info</h2>
     <%= attachment_image_tag @books.user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %>
    <table class="table">
    <tr>
        <th>name</th>
        <td><h3><%= @books.user.username %></h3></td>
    </tr>
    <tr>
        <th>introduction</th>
        <td><h3><%= @books.user.introduction %></h3></td>
    </tr>
    </table>
    <p class="btn btn-default button"><%= link_to "", edit_user_path(current_user),class: "glyphicon glyphicon-wrench edit_user_#{current_user.id}" %></p>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title, class: "button book_title" %>
<h4>Opinion</h4>
<%= f.text_area :opinion, class: "button book_body" %>
<p><%= f.submit 'Create Book', class: "btn btn-primary button" %></p>
<% end %>
</div>
<div class="col-lg-9">
<h2>Book detail</h2>
<table class= "table">
    <tr>
    	<td><%= link_to user_path(@books.user.id), class: "user_#{@books.user.id}" do %><%= attachment_image_tag @books.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><p><%= @books.user.username %></p><% end %></td>
    	<td><%= @books.title %></td>
    	<td><%= @books.opinion %></td>
        <% if @books.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@books), class: "btn btn-success edit_book_#{@books.id}" %></td>
    	<td><%= link_to "Destroy", book_path(@books), class: "btn btn-danger destroy_book_#{@books.id}",method: :delete, data: { confirm: '削除しますか？' } %></td>
        <% end %>
    </tr>
</table>
</div>
</div>
</div>