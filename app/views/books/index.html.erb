<% if flash[:alert] %>
      <div class="flash">
        <%= flash[:alert] %>
      </div>
    <% end %>
<div class="container">
      <div class="row"> 
        <div class="col-lg-3">
	<h2>User Info</h2>
	 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg',fallback: "no_image.jpg" %> 
    <table class="table">
    <tr>
        <th>name</th>
        <td><h3><%= current_user.username %></h3></td>
    </tr>
    <tr>
        <th>introduction</th>
        <td><h3><%= current_user.introduction %></h3></td>
    </tr>
    </table>
    <p class="btn btn-default button"><%= link_to "", edit_user_path(current_user),class: "glyphicon glyphicon-wrench edit_user_#{current_user.id}" %></p>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title, class: "button book_title" %>
<h4>Opinion</h4>
<%= f.text_area :opinion, class: "button book_body" %>
<p><%= f.submit 'Create Book', class: "btn btn-primary button" %></p>
<% end %>
</div>
<div class="col-lg-9">
<h2>Books</h2>
<div class="container">
<table class= "table table-hover">
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
<% @books.each do |book| %>
    <tr>
    	<td><%= link_to user_path(@user.id), class: "user_#{@user.id}" do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %></td>
    	<td><%= link_to book_path(book.id), class: "book_#{book.id}" do %>
            <%= book.title %><% end %></td>
    	<td><%= book.opinion %></td>
    </tr>
<% end %>
</table>
</div>
</div>
</div>